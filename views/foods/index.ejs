<!-- views/foods/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <% if (pantry.length > 0) { %>
      <ul>
        <% pantry.forEach(item => { %>
          <li>
            <%= item.name %> 
            <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST">
              <button type="submit">Delete</button>
            </form>
            <form action="/users/<%= user._id %>/foods/<%= item._id %>/edit" method="get">
              <button>Edit</button>
            </form>
          </li>
        <% }) %>

      </ul>
    <% } else { %>
      <p>There are no items in this pantry.</p>
    <% } %>
  </body>
</html>
